# =============================================================================
# MongoDB Backup Manager - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values according to your setup.
# NEVER commit your .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port for the backend API server (default: 5552)
PORT=5552

# Host binding - use 0.0.0.0 to allow external connections
HOST=0.0.0.0

# Environment mode
NODE_ENV=production

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Default admin credentials (CHANGE THESE IN PRODUCTION!)
ADMIN_USER=admin
ADMIN_PASS=admin

# JWT Secret for token signing (CHANGE THIS - use a long random string)
JWT_SECRET=change_this_to_a_very_long_random_secret_key_for_jwt

# -----------------------------------------------------------------------------
# MongoDB Configuration (Target database to backup)
# -----------------------------------------------------------------------------
# Connection string for the MongoDB instance you want to backup
# Format: mongodb://[username:password@]host[:port]/database[?options]
MONGO_URL=mongodb://localhost:27017/yourdb

# If your MongoDB requires authentication, specify the auth database
# MONGO_AUTH_SOURCE=admin

# -----------------------------------------------------------------------------
# FTP Configuration (Optional - for remote backup storage)
# -----------------------------------------------------------------------------
# FTP server details for uploading backups
FTP_HOST=ftp.example.com
FTP_PORT=21
FTP_USER=ftpuser
FTP_PASSWORD=ftppassword
FTP_BASE_PATH=/backups

# Enable/disable FTP uploads (true/false)
FTP_ENABLED=false

# -----------------------------------------------------------------------------
# Backup Settings
# -----------------------------------------------------------------------------
# Keep local copies of backups after FTP upload
KEEP_LOCAL_BACKUPS=true

# Number of recent backups to retain locally
KEEP_LAST_N_BACKUPS=30

# Auto-delete backups older than this many days
RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Scheduler Configuration
# -----------------------------------------------------------------------------
# Cron expression for scheduled backups
# Examples:
#   * * * * *     = Every minute (testing only!)
#   0 2 * * *     = Daily at 2:00 AM
#   0 */6 * * *   = Every 6 hours
#   0 0 * * 0     = Weekly on Sunday at midnight
BACKUP_CRON=0 2 * * *

# -----------------------------------------------------------------------------
# Security & Encryption
# -----------------------------------------------------------------------------
# Encryption key for storing sensitive settings (minimum 32 characters)
# IMPORTANT: Generate a strong random key for production!
SETTINGS_ENCRYPTION_KEY=change_this_to_a_very_long_random_encryption_key_minimum_32_chars
